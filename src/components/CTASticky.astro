---
// CTA Sticky component
---

<div 
	id="sticky-cta" 
	class="fixed bottom-0 left-0 right-0 bg-midnight-blue text-light p-4 shadow-lg transform translate-y-full transition-transform duration-300 ease-in-out z-50 border-t border-soft-gold"
>
	<div class="max-w-4xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-4">
		<div class="text-center sm:text-left">
			<h3 class="text-lg font-bold mb-1 font-serif text-soft-gold">¿Quieres hablar con Harry Potter IA?</h3>
			<p class="text-muted text-sm font-sans">Descubre la magia de conversar con el mago más famoso del mundo</p>
		</div>
		<div class="flex gap-3">
			<a 
				href="https://wa.me/543795692823" 
				target="_blank" 
				rel="noopener noreferrer"
				class="bg-soft-gold text-midnight-blue px-6 py-2 rounded-lg font-semibold font-sans hover:bg-yellow-400 transition-colors duration-200 shadow-lg"
			>
				Chatear Ahora
			</a>
			<button 
				id="close-sticky-cta" 
				class="text-muted hover:text-light transition-colors duration-200 p-2"
				aria-label="Cerrar banner"
			>
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
				</svg>
			</button>
		</div>
	</div>
</div>

<script>
	// Mostrar el banner después de hacer scroll
	let hasShown = false;
	const banner = document.getElementById('sticky-cta');
	const closeButton = document.getElementById('close-sticky-cta');

	function showBanner() {
		if (!hasShown && window.scrollY > 300) {
			hasShown = true;
			banner.classList.remove('translate-y-full');
		}
	}

	function hideBanner() {
		banner.classList.add('translate-y-full');
	}

	// Mostrar banner al hacer scroll
	window.addEventListener('scroll', showBanner);

	// Ocultar banner al hacer clic en cerrar
	closeButton.addEventListener('click', hideBanner);

	// Ocultar banner en pantallas grandes
	function checkScreenSize() {
		if (window.innerWidth >= 1024) {
			hideBanner();
		}
	}

	window.addEventListener('resize', checkScreenSize);
	checkScreenSize(); // Verificar al cargar
</script>